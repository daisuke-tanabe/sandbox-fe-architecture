{
  "plugins": [
    "stylelint-selector-bem-pattern"
  ],
  "rules": {
    "plugin/selector-bem-pattern": {
      "implicitComponents": true,
      "componentName": "^[-_a-zA-Z0-9]+",
      "componentSelectors": {
        "initial": "^\\.{componentName}(?:__[a-zA-Z0-9]+)?(?:--[a-zA-Z0-9]+)?$"
      }
    }
  }
}
